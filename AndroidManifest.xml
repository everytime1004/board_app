<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.board"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.board.view.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.board.view.PostIndexActivity"
            android:label="@string/title_activity_show" >
        </activity>
        <activity
            android:name="com.example.board.view.PostShowActivity"
            android:label="@string/title_activity_post_show" >
        </activity>
        <activity
            android:name="com.example.board.view.AuthActivity"
            android:label="@string/title_activity_auth" >
        </activity>
    </application>

</manifest>